<!DOCTYPE html>
<html>
  <head>
    <title>Signup - Achilles</title>
    <%- include('./partials/header.ejs') %>
    <script src="/assets/js/signup.js"></script>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>

    <div style="text-align: center; width: 26%; margin-left: 37%">
      <div>
        <img src="/assets/images/logo.png" width="90" height="90">
      </div>
      <div>
          <span class="brandText" style="font-size: 30px">Achilles</span>
      </div>
      <div class="roboto" style="margin-top: 10px; margin-bottom: 50px; font-size: 20px; letter-spacing: 2px">
        Let's get started
      </div>
      <%- include('./partials/warnings.ejs') %>
      <form method="POST" action="/user/signup">
        <div class="form-group">
          <input 
            type="text" 
            class="form-control" 
            name="username" 
            value="<%= typeof username != 'undefined' ? username : '' %>"
            placeholder="Name" 
            required
          >
        </div>
        <div class="form-group">
          <input 
            type="email" 
            class="form-control" 
            name="email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
            placeholder="Email" 
            required
          >
        </div>
        <div class="form-group">
          <div class="input-group" id="show_hide_password">
            <input 
              type="password" 
              class="form-control" 
              name="password" 
              value="<%= typeof password != 'undefined' ? password : '' %>"
              placeholder="Password" 
              required
            />
            <div class="input-group-append">
              <span class="input-group-text" style="background-color: white; border-left: none; cursor: pointer;">
                <i class="fa fa-eye-slash"></i>
              </span>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 20px; width: 50%; height: 1.1cm">
          SIGN UP
        </button>
      </form>
    </div>

  </body>
</html>