<!DOCTYPE html>
<html>
  <head>
    <title>Signup - Achilles</title>
    <%- include('./partials/header.ejs') %>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>

    <div style="text-align: center; width: 20%; margin-left: 40%">
      <div>
        <img src="/assets/images/logo.png" width="90" height="90">
      </div>
      <div style="font-size: 25px; color: #55CDD0">
        ACHILLES
      </div>
      <div style="margin-top: 10px; margin-bottom: 30px; font-size: 20px; font-family: calibre,sans-serif;">
        Let's get started
      </div>
      <form method="POST">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Name" required>
        </div>
        <div class="form-group">
          <input type="email" class="form-control" placeholder="Email" required>
        </div>
        <div class="form-group">
          <input type="password" class="form-control" placeholder="Password" required>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 20px; width: 50%; height: 1.1cm">
          SIGN UP
        </button>
      </form>
    </div>

  </body>
</html>