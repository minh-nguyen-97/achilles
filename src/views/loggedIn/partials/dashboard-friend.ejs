      <% for (var i = 0; i < friends.length; i++) { %>
        <div class="row align-items-center friendsChat">
          <div class="col text-left">
            <img id="avatarOf<%= friends[i].username %>" src="<%= friends[i].avatarURL %>" style="border-radius: 50%" width="36" height="36"> 
            <span style="font-size: 14px">
              <strong class="brandColor"><%= friends[i].username %></strong>
            </span>
          </div>
          <div class="col text-right" style=" vertical-align: middle">
              <i id="chatTriggerFor<%= friends[i].username %>" class="fab fa-facebook-messenger chatTrigger" style="font-size: 18px;"></i>
          </div>
        </div>
      <% } %> 
    
    </div>
  </div>
</div>

<!-- Chat Box -->
<div id="chatBox1HeaderToggle" style="position: fixed; right: 36%; bottom: 0%; width: 20%; cursor: pointer; display: none">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-8">
          <img src="<%= avatarURL %>" width="30" height="30" style="border-radius: 50%"/>
          <h6 style="display: inline-block;"><%= username %></h6>
        </div>
        <div class="col-4 text-right">
          <i class="fas fa-minus"></i>
        </div>
      </div>
      
    </div>
  </div>
</div>

<div 
  id="chatBox1Toggle" 
  style=" position: fixed;
          right: 36%; 
          top: 50%; 
          bottom: 0%; 
          width: 20%; 
          z-index: 1;
          font-size: 13.3px;
          display: none;
          "
  >
  <div id="chatBox1InboxContainer" class="card" style="height: 90%;">
    <div class="card-header" style="cursor: pointer;">
      <div class="row">
        <div id="chatBox1Receiver" class="col-8">
          <img src="<%= avatarURL %>" width="30" height="30" style="border-radius: 50%"/>
          <h6 style="display: inline-block;"><%= username %></h6>
        </div>
        <div class="col-4 text-right">
            <i class="fas fa-times"></i>
        </div>
      </div>
    </div>
    <div id="chatBox1Inboxes" class="overflow-auto" style="vertical-align: bottom;">
      <div id="chatBox1FirstMessage" style="margin-top: 5px; width: 100%; text-align:center; display: none">
        <div style="width: 100%;">
            <i class="fas fa-handshake brandColor" style="font-size: 30px;"></i>
        </div>
        <div style="width: 100%;">
            You and <%= username %> are friends on Achilles
        </div>
      </div>

      <div id="chatBox1Spinner" class="d-none justify-content-center" style="margin-top: 5px;">
        <div class="spinner-border spinner-border-sm brandColor" role="status">
          <span class="sr-only">Loading...</span>
        </div>
      </div>

      <!-- <div class="d-flex flex-row-reverse">
        <div class="text-right senderMessage">
          sender message
        </div>
      </div>

      <div class="d-flex flex-row">
        <div class="text-left receiverMessage">
          receiver message
        </div>
      </div> -->
    </div>
  </div>

  <textarea id="chatBox1TextArea"
  class="h-10p"
  style=" width:100%;
          overflow:auto;
          position: absolute;
          bottom: 0%;
          height: 10%;
          max-height: 30%;
          border: 1px solid rgba(0,0,0,.125);" 
          placeholder="Enter your message..."></textarea>
</div>



